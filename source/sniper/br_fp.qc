$modelname "c_fp_cesniperrifle.mdl"
$include "ar_coll.qci"
$bodygroup "studio"
{
	studio "new/c_fp_sniper.smd"
	studio "new/camo.smd"
	studio "new/avalanche.smd"
	studio "new/desert.smd"
	studio "new/gj.smd"
	studio "new/gold.smd"
}
$bodygroup "scopes"
{
	blank
	studio "new/ce_sniper_scope.smd"
	studio "new/ce_sniper_scope_desert.smd"
	studio "new/ce_sniper_scope_avalanche.smd"
}

$cdmaterials "snowysnowtime/hce/rifles/sniper"
$cdmaterials "snowysnowtime/hcea/rifles/sniper"

$texturegroup "skinfamilies"
{
	{ "sniperrifle" }
	{ "srwoodlands" }
	{ "srcheese" }
	{ "srog" }
}

$surfaceprop "default"

$contents "solid"

$illumposition -2.073 -5.096 -10.058

$attachment "muzzle" "frame gun" 38 0 0.4 rotate 0 0 0
$attachment "1" "frame gun" 0 0 3.5 rotate 0 90 -180

$cbox 0 0 0 0 0 0

$bbox -10.175 -15.883 -17.155 20.363 11.732 -2.96

$include "bonemerge.qci"

$sectionframes 30 132

$sequence "idle" {
	"anims\idle.smd"
	activity "ACT_VM_IDLE" 1
	fadein 0.2
	fadeout 0.2
	node "0"
	rotate -90
	fps 30
	loop
}

$sequence "lel" {
	"anims\idle.smd"
	activity "ACT_VM_IDLE" 1
	frame 1 1
	rotate -90
}

$sequence "fidget" {
	"anims\fidget.smd"
	activity "ACT_VM_FIDGET" 1
	fadein 0.2
	fadeout 0.2
	node "0"
	rotate -90
	fps 30
}

$sequence "fire" {
	"anims\fire.smd"
	activity "ACT_VM_PRIMARYATTACK" 1
	fadein 0.2
	fadeout 0.2
	node "2"
	rotate -90
	snap
	fps 30
}

$sequence "draw" {
	"anims\deploy.smd"
	activity "ACT_VM_DRAW" 1
	fadein 0.2
	fadeout 0.2
	node "0"
	rotate -90
	snap
	fps 30
}

$sequence "reload" {
	"anims\reload.smd"
	activity "ACT_VM_RELOAD" 1
	fadein 0.2
	fadeout 0.2
	node "0"
	rotate -90
	fps 30
}
$sequence "reloadempty" {
	"anims\reload_empty.smd"
	activity "ACT_VM_RELOAD_EMPTY" 1
	fadein 0.2
	fadeout 0.2
	node "0"
	rotate -90
	fps 30
}

$sequence "melee" {
	"anims\melee.smd"
	activity "ACT_VM_HITCENTER" 1
	fadein 0.0
	fadeout 0.2
	rotate -90
	fps 30
}
